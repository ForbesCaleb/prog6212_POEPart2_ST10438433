@{
    var title = ViewData["Title"] ?? "CMCS - Contract Monthly Claim System";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title</title>

    <!-- Bootstrap & site CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />

    <!-- Allow page-specific style sections -->
    @RenderSection("Styles", required: false)
</head>

<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">CMCS</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navMenu">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Claim" asp-action="Submit">Submit Claim</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Claim" asp-action="MyClaims">My Claims</a></li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <form asp-controller="Auth" asp-action="Logout" method="post">
                                <button class="btn btn-outline-light btn-sm">Logout</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="flex-fill">
        <div class="container mt-4">
            @RenderBody()
        </div>
    </main>

    <footer class="mt-auto bg-dark text-white py-3 text-center small">
        <div class="container">
            &copy; @DateTime.Now.Year - CMCS System | Developed for PROG6212
        </div>
    </footer>

    <!-- Bootstrap JS & site scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>

    <!-- Allow page-specific scripts -->
    @RenderSection("Scripts", required: false)
</body>
</html>

